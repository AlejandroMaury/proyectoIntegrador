<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head.ejs') %>
        <title>TERRA</title>
        <link rel="stylesheet" href="css/index.css">
</head>

<body>
    <header>
        <section class="nav-search">
            <ul class="nav-bar">
                <li>
                    <% if (locals.isLogged) { %>
                        <!-- <a class="label"></a> -->
                        <% } else if (locals.adminLogged) { %>
                            <!-- <a class="label"></a> -->
                            <% } else { %>
                                <a class="label" href="/users/register">Registro</a>
                                <% } %>
                </li>
                <li><a class="label" href="/products/list">Productos</a></li>
                <li>
            </ul>
            <div class="form" action="#" method="get">
                <input class="input" type="text" readonly value="Buscar plantas y productos" />
                <span class="submit"><i class="fa-solid fa-magnifying-glass"></i></span>
            </div>
            <div class="icon-user-cart">
                <% if(locals.isLogged) {%>
                    <li>
                        <a class="avatar-nav" href="/users/profile">
                            <img class="avatar-img-nav" src="../../../Images/<%= locals.userLogged.avatar %>" alt="">
                            <p class="username-nav">
                                <%= locals.userLogged.usuario %>
                            </p>
                        </a>
                    </li>
                    <% } else if (locals.adminLogged) { %>
                        <li>
                            <a class="avatar-nav" href="/users/profile">
                                <img class="avatar-img-nav" src="../../../Images/<%= locals.adminLogged.avatar %>"
                                    alt="">
                                <p class="username-nav">
                                    <%= locals.adminLogged.usuario %>
                                </p>
                            </a>
                        </li>
                        <% } else { %>
                            <li>
                                <a class="label-icon3" href="users/login" class="user"><i
                                        class="icon-header fa-solid fa-user"></i></a>
                            </li>
                            <% } %>
                                <li>
                                    <a class="label-icon3" href="/products/cart" class="cart"><i
                                            class="icon-header fa-solid fa-cart-shopping"></i>
                                    </a>
                                </li>
            </div>
            </ul>


        </section>

        <div class="banner-container">
            <img class="banner" src="/Images/banner-principal2.gif" alt="">
        </div>
        <a href="/index" class="logo">
            <img class="logo" src="/Images/logo-blanco.png" alt="">
        </a>

        <!-- <img class="main-text" src="/Images/main-text.png" alt=""> -->
        <img class="main-text-left" src="/Images/main-text-left.png" alt="">



        <div>
            <ul class="bottom-nav">
                <li class="bottom"><a class="label-btm" href="/"><i class="fa-solid fa-house"></i></a></li>
                <li class="bottom">
                    <% if(locals.isLogged) { %>
                        <a class="label-btm" href="/profile"><i class="fa-solid fa-user"></i></a>
                        <% } else if (locals.adminLogged) { %>
                            <a class="label-btm" href="/profile"><i class="fa-solid fa-user"></i></a>
                            <% } else { %>
                                <a class="label-btm" href="/login"><i class="fa-solid fa-user"></i></a>
                                <% } %>
                </li>
                <li class="bottom"><a class="label-btm" href="products/list"><i class="fas fa-bars"></i></a></li>
                <li class="bottom"><a class="label-btm" href="products/cart" class="user"><i
                            class="fa-solid fa-cart-shopping"></i></a></li>
            </ul>
        </div>

    </header>

    <main>
        <section class="categories">
            <h3 class="cat-titles">Categorías</h3>

            <div class="products">
                <a href="/products/category/1">
                    <article class="cat">
                        <div class="square">
                            <img class="img-cat" src="/Images/categoria-plantas2.png" alt="">
                        </div>
                        <h4 class="description">Plantas</h4>
                    </article>
                </a>

                <a href="/products/category/2">
                    <article class="cat">
                        <div class="square">
                            <img class="img-cat" src="/Images/categoria-macetas2.png" alt="">
                        </div>
                        <h4 class="description">Macetas</h4>
                    </article>
                </a>

                <a href="/products/category/3">
                    <article class="cat">
                        <div class="square">
                            <img class="img-cat" src="/Images/categoría-accesorios2.png" alt="">
                        </div>
                        <h4 class="description">Accesorios</h4>
                    </article>
                </a>

                <a href="/products/category/4">
                    <article class="cat">
                        <div class="square">
                            <img class="img-cat" src="/Images/categoria-sustratos.png" alt="">
                        </div>
                        <h4 class="description">Sustratos</h4>
                    </article>
                </a>
            </div>
        </section>

        <section class="best-sellers">
            <h3 class="bs-titles">Más vendidos</h3>

            <section class="bs-products">

                <a href="../products/detailView/1">
                <article class="product-item">
                    <img class="product-img" src="/Images/product-ave-paraiso.png" alt="">
                    <div class="product-info">
                        <h2 class="product-description">Ave del paraíso</h2>
                        <p class="price">50 USD</p>
                        <button class="add" id="add-producto" type="submit">Agregar <i
                                class="fa-solid fa-cart-plus"></i></button>
                    </div>
                </article>
            </a>
                <div>
                    <article class="product-item">
                        <img class="product-img" src="/Images/product-philodendron-white-knight.png" alt="">
                        <div class="product-info">
                            <h2 class="product-description">Philodendron</h2>
                            <p class="price">50 USD</p>
                            <button class="add" id="prueba">Agregar <i class="fa-solid fa-cart-plus"></i></button>
                        </div>
                    </article>
                </div>
                <article class="product-item">
                    <img class="product-img" src="/Images/product-syngonium.png" alt="">
                    <div class="product-info">
                        <h2 class="product-description">Syngonium</h2>
                        <p class="price">50 USD</p>
                        <button class="add">Agregar <i class="fa-solid fa-cart-plus"></i></button>
                    </div>
                </article>

                <article class="product-item">
                    <img class="product-img" src="/Images/product-begonia-maculata.png" alt="">
                    <div class="product-info">
                        <h2 class="product-description">Begonia maculata</h2>
                        <p class="price">50 USD</p>
                        <button class="add">Agregar <i class="fa-solid fa-cart-plus"></i></button>
                    </div>
                </article>

            </section>
        </section>

        <section class="catalogue">
            <h3 class="cat-titles">Catálogo de productos</h3>

            <section class="ct-products">

                <article class="product-item">
                    <img class="product-img" src="/Images/product-ave-paraiso.png" alt="">
                    <div class="product-info">
                        <h2 class="product-description">Ave del paraíso</h2>
                        <p class="price">50 USD</p>
                        <button class="add">Agregar <i class="fa-solid fa-cart-plus"></i></button>
                    </div>
                </article>

                <article class="product-item">
                    <img class="product-img" src="/Images/product-philodendron-white-knight.png" alt="">
                    <div class="product-info">
                        <h2 class="product-description">Philodendron</h2>
                        <p class="price">50 USD</p>
                        <button class="add">Agregar <i class="fa-solid fa-cart-plus"></i></button>
                    </div>
                </article>

                <article class="product-item">
                    <img class="product-img" src="/Images/product-syngonium.png" alt="">
                    <div class="product-info">
                        <h2 class="product-description">Syngonium</h2>
                        <p class="price">50 USD</p>
                        <button class="add">Agregar <i class="fa-solid fa-cart-plus"></i></button>
                    </div>
                </article>

                <article class="product-item">
                    <img class="product-img" src="/Images/product-begonia-maculata.png" alt="">
                    <div class="product-info">
                        <h2 class="product-description">Begonia maculata</h2>
                        <p class="price">50 USD</p>
                        <button class="add">Agregar <i class="fa-solid fa-cart-plus"></i></button>
                    </div>
                </article>

            </section>
        </section>
    </main>
    <script src="/js/carrito.js" type="text/javascript"></script>
    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>

</html>