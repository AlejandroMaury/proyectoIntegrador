  </header>

    <main>
      <section class="main-content">
        <div class="main-image-container">
          <!-- <img class="main-image" src="/Images/register-img.png" alt=""> -->
        </div>

        <div class="register">
          <a href="/index" class="logo"><img class="logo" src="/Images/logo-blanco.png" alt=""></a>

          <!-- <h3 class="form-title2">¡Crea tu cuenta!</h3> -->
          <h1 class="form-title">¡Creá tu cuenta!</h1>
        
          <form action="/login" method="post">
            
            <label class="icon-register">
                <i class="fa-solid fa-envelope"></i>
            <input type="text" name="e-mail" placeholder="Escribe tu e-mail" required/></label>
            
            <label class="icon-register">
              <i class="fa-solid fa-user"></i>
            <input type="text" name="Usuario" placeholder="Nombre de usuario" required/></label>
            
            <label class="icon-register">
              <i class="fa-solid fa-lock"></i>
            <input type="password" name="contraseña" placeholder="Contraseña" required/></label>

            <label class="icon-register">
                <i class="fa-solid fa-check"></i>
            <input type="password-conf" name="contraseña-conf" placeholder="Confirmar contraseña" required/></label>

            <label class="icon-register">
                <i class="fa-solid fa-mobile-screen"></i>
            <input type="cel" name="cel" placeholder="Celular (opcional)" required/></label>

            <button class="register-button" type="submit">Crear cuenta</button>
          </form>
        
          <div class="otros-login">
            <div class="registro">¿Ya tenés cuenta? <a class="link-sub" href="/users/login">Iniciá sesión</a></div>
          </div>

          <p class="with-love">
            Creado con <i class="fa-solid fa-leaf"></i> por e-Terra Team
          </p>
        </section>
      </div>
    </main>
  </body>
