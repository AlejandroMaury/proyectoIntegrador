  <body>
    <main>
      <section class="main-content">
        <div class="main-image-container">
          <!-- <img class="main-image" src="/Images/login-terra-plant.png" alt=""> -->
        </div>

        <div class="register">
          <a href="/index" class="logo"><img class="logo" src="/Images/logo-blanco.png" alt=""></a>
          <h3 class="form-title2">¡Qué bueno que volviste!</h3>
          <h1 class="form-title">Iniciá sesión aquí...</h1>

          <form action="/login" method="post">
            <label class="usuario">
              <i class="fa-solid fa-user"></i>
            <input type="text" name="Usuario" placeholder="Nombre de usuario" required/></label>
            
            <label class="candado">
              <i class="fa-solid fa-lock"></i>
            <input type="password" name="contraseña" placeholder="Contraseña" required/></label>

            <button class="login-button" type="submit">Iniciar Sesion</button>
          </form>

          <div class="otros-login">
            <a class="link-sub" href="#">¿Olvidaste tu contraseña?</a>
            <div class="registro">¿No estás registrado? <a class="link-sub" href="/register.html">regístrate</a></div>
          </div>

          <p class="with-love">
            Creado con <i class="fa-solid fa-leaf"></i> por e-Terra
          </p>
        </section>
      </div>
    </main>
    <footer>

