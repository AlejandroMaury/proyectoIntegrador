<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
        <title>Listado de productos</title>
        <link rel="stylesheet" href="../css/formLoad.css">
</head>

<body>
    <header>
        <%- include('../partials/header.ejs') %>
    </header>

    <main>

        <div class="new-product">

            <h3>Crea un producto nuevo</h3>

            <form action="./create" method="post" enctype="multipart/form-data">

                <label for="name">Nombre del producto</label>
                <input class="icon-register" type="text" name="name" value=" <%= locals.oldBody ? locals.oldBody.name : '' %> ">
                <% if (locals.mensajeDeError && mensajeDeError.name) { %>
                    <p class="error-message"> <%= mensajeDeError.name.msg  %> </p>
                <% } %>

                <label for="categoria">Tipo de producto</label>
                <label class="categories" for="categoria">
                    <input type="radio" name="categoria" value="Plantas" id="Plantas">Plantas
                    <input type="radio" name="categoria" value="Macetas" id="Macetas">Macetas
                    <input type="radio" name="categoria" value="Accesorios" id="Accesorios">Accesorios
                    <input type="radio" name="categoria" value="Sustratos" id="Sustratos">Sustratos
                </label>
                

                <label for="precio">Descripción</label>
                <textarea class="icon-register" name="descripcion" value=" <%= locals.oldBody ? locals.oldBody.descripcion : '' %> "></textarea>
                <% if (locals.mensajeDeError && mensajeDeError.descripcion) { %>
                    <p class="error-message"> <%= mensajeDeError.descripcion.msg  %> </p>
                <% } %>

                <label for="precio">Precio</label>
                <input class="icon-register" type="price" name="precio" value=" <%= locals.oldBody ? locals.oldBody.precio : '' %> ">
                <% if (locals.mensajeDeError && mensajeDeError.precio) { %>
                    <p class="error-message"> <%= mensajeDeError.precio.msg  %> </p>
                <% } %>

                <label for="cantidad">Cantidad</label>
                <input class="icon-register" type="number" name="cantidad" value=" <%= locals.oldBody ? locals.oldBody.cantidad : '' %> ">
                <% if (locals.mensajeDeError && mensajeDeError.cantidad) { %>
                    <p class="error-message"> <%= mensajeDeError.cantidad.msg  %> </p>
                <% } %>

                <label for="image">Imagen</label>
                <input class="icon-register" type="file" name="image" id="image">

                <label class="categories" for="disponible">Disponible
                    <input type="radio" name="disponible" value="Disponible">Sí
                    <input type="radio" name="disponible" value="No disponible">No
                </label>


                <button class="load-button" type="submit">Crear producto</button>
            </form>
        </div>

    </main>

    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>

</html>