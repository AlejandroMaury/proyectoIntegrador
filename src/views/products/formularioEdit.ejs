<html>

<head>
    <%- include('../partials/head.ejs') %>
        <title>Listado de productos</title>
        <link rel="stylesheet" href="/css/formLoad.css">
</head>



<body>
    <header>
        <%- include('../partials/header.ejs') %>
    </header>



    <main>

        <div class="new-product">

            <h3>Editando producto</h3>

            <form method="post" id="form-create-p" action="/products/edit/<%= product.id %>?_method=PUT">

                <label for="name">Nombre del producto</label>
                <input class="icon-register" type="text" name="name" value="<%=product.name%>">

                <label for="categoria">Tipo de producto</label>
                <label class="categories" for="categoria">
                    <input type="radio" name="categoria" <%=product.products_categories_id == "Planta" ? "selected" : ""%> value="1">Plantas
                    <input type="radio" name="categoria" <%=product.products_categories_id == "Macetas" ? "selected" : ""%> value="2">Macetas
                    <input type="radio" name="categoria" <%=product.products_categories_id == "Accesorios" ? "selected" : ""%> value="3">Accesorios
                    <input type="radio" name="categoria" <%=product.products_categories_id == "Sustratos" ? "selected" : ""%> value="4">Sustratos
                </label>


                <label for="precio">Descripci√≥n</label>
                <textarea class="icon-register" id="descripcion" name="descripcion"><%=product.description%></textarea>

                <label for="precio">Precio</label>
                <input class="icon-register" type="price"  id="precio" name="precio" value="<%=product.price%>">

                <label for="cantidad">Cantidad</label>
                <input class="icon-register" type="number"  id="cantidad" name="cantidad" value="<%=product.stock%>">

                <label for="image">Imagen</label>
                <input class="icon-register" type="file" name="image" id="image" <%=product.image%>>


                <button class="load-button" type="submit">Editar producto</button>
            </form>
        </div>

    </main>



<footer>
    <%- include('../partials/footer.ejs') %>
</footer>
</body>
</html>